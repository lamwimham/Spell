{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".", // 必须添加此项
    "paths": {
      "@/types/*": ["./src/types/*"],
      "@/*": ["./*"] // 确保此项存在
    },
    "jsx": "react-native",
    "types": ["react", "react-native", "jest"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}